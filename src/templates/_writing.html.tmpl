<div class="writing">
  {{ range posts }}
    {{ if lt
      .CreatedAt.Year now.Year
    }}
      {{ continue }}
    {{ end }}
    <div class="post">
      {{ if .IsDraft }}
        <div class="draft">Draft</div>
      {{ end }}
      {{ if and (.IsPost) (not .CreatedAt.IsZero) }}
        <div class="publish-date">
          <i>
            published
            {{ .CreatedAt.Format "2006 January" }}{{ if not .UpdatedAt.IsZero }}
              / last updated
              {{ .UpdatedAt.Format "2006 January" }}
            {{ end }}</i
          >
        </div>
      {{ end }}
      {{ with .Category }}
        <div
          style="text-align: center; text-transform: uppercase; margin-top: 2em"
        >
          — a {{ . }} —
        </div>
      {{ end }}
      {{ .HTML }}
    </div>
  {{ end }}
  <div><a href="/archives.html">Archives &rarr;</a></div>
</div>
