<!DOCTYPE html>
<html lang="en">
  <head>
    {{ template "head" }}
    {{ with .Prev }}
      <link rel="preload" as="image" href="/{{ .WebPath }}" />
    {{ end }}
    {{ with .Next }}
      <link rel="preload" as="image" href="/{{ .WebPath }}" />
    {{ end }}
    <script>
      document.addEventListener('keydown', event => {
        switch (event.key) {
          {{with .Prev}}
            case "ArrowLeft":
              window.location.href = "{{ .PageLink }}";
              break;
          {{end}}
          {{with .Next}}
            case "ArrowRight":
              window.location.href = "{{ .PageLink }}";
              break;
          {{end}}
        }
      });
    </script>
    <title>twos.dev Photo Viewer</title>
    <style>
      a,
      a:visited {
        color: grey !important;
      }
      body {
        background: black !important;
        color: grey !important;
      }
    </style>
  </head>

  <body>
    <header style="text-align:center"><a href="/">twos.dev</a></header>
    <p style="text-align: center">
      {{ with .Prev }}
        <a href="{{ .PageLink }}">&larr; prev</a>
      {{ end }}
      {{ if and .Next .Prev }}/{{ end }}
      {{ with .Next }}
        <a href="{{ .PageLink }}">next &rarr;</a>
      {{ end }}
    </p>
    <p style="text-align: center; margin-bottom: 0">
      <a href="{{ with .Next }}{{ .PageLink }}{{ else }}/{{ end }}" class="img">
        <img
          alt="{{ .Alt }}"
          src="/{{ .WebPath }}"
          style="max-width: 100%; max-height: 80vh"
        />
      </a>
    </p>
    <p style="text-align: center; margin-top: 0">
      <i>{{ .Camera }}</i> &bull; &copy; {{ .TakenAt.Year }} Benjamin Carlsson
    </p>
    <footer style="margin-top: 1em">
      <p style="text-align:center">
        <small>
          <i>
            {{ with src }}
              source:
              <a href="https://github.com/glacials/twos.dev/blob/main/{{ . }}"
                >{{ . }}</a
              >
            {{ else }}
              <a href="https://github.com/glacials/twos.dev">Source</a>
            {{ end }}
          </i>
        </small>
      </p>
    </footer>
  </body>
</html>
