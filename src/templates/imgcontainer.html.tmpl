<!doctype html>
<html lang="en">
  <head>
    {{ template "src/templates/_head.html.tmpl" }}
    {{ with .Prev }}
      <link rel="preload" as="image" href="/{{ .WebPath }}" />
    {{ end }}
    {{ with .Next }}
      <link rel="preload" as="image" href="/{{ .WebPath }}" />
    {{ end }}
    <script>
      document.addEventListener('keydown', event => {
        switch (event.key) {
          // {{with .Prev}}
            case "ArrowLeft":
              window.location.href = "{{ .PageLink }}";
              break;
          // {{end}}
          // {{with .Next}}
            case "ArrowRight":
              window.location.href = "{{ .PageLink }}";
              break;
          // {{end}}
        }
      });
    </script>
    <title>twos.dev Photo Viewer</title>
    <style>
      a,
      a:visited {
        color: grey !important;
      }
      body {
        background: black !important;
        color: grey !important;
        font-family: monospace;
        line-height: 1em;
        margin: 0;
      }
      html {
        margin: 0;
      }
      span {
        background: black !important;
        padding: 0 0.5em;
      }
    </style>
  </head>

  <body>
    <div style="margin:1em;position:absolute">
      <span>
        {{ with .Prev }}
          <a href="{{ .PageLink }}">&larr; prev</a>
        {{ end }}
        {{ if and .Prev .Next }}/{{ end }}
        {{ with .Next }}
          <a href="{{ .PageLink }}">next &rarr;</a>
        {{ end }}
      </span>
      <span style="margin-left: 5em;">
        <a href="/photos.html">Exit</a>
      </span>
    </div>
    <a
      href="{{ with .Next }}
        {{ .PageLink }}
      {{ else }}
        /photos.html
      {{ end }}"
      class="img"
      style="text-align: center; margin-bottom: 0; position: absolute; top: 0; left: 0; z-index: -1;"
      ><img
        alt="{{ .Alt }}"
        src="{{ .WebPath }}"
        srcset="{{ range .Thumbnails }}{{ .WebPath }} {{ .Width }}w,{{ end }}"
        sizes="{{ range .Thumbnails }}
          (max-width: {{ .Width }}px) {{ .Width }}px,
        {{ end }}"
        style="max-width: 100%; max-height: 100vh; display:block;"
    /></a>
    <div style="position:absolute; left:0; bottom:1.5rem; margin:1em;">
      <span style="font-style:italic;"> {{ .Camera }}</span><br />
      <span style="font-style:italic;">
        {{ .FocalLength }}mm &bull; Æ’{{ .Aperture }} &bull; {{ .ShutterSpeed }}s
        &bull; ISO
        {{ .ISO }}
      </span>
      <br />
      <span style="font-style:italic">
        &copy; {{ .TakenAt.Year }} Benjamin Carlsson
      </span>
    </div>
    {{ template "src/templates/_js.html.tmpl" }}
  </body>
</html>
