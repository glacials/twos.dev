<!DOCTYPE html>
<html lang="en">
  <head>
    {{ template "head" }}
    {{ with .Prev }}
      <link rel="preload" as="image" href="/{{ .WebPath }}" />
    {{ end }}
    {{ with .Next }}
      <link rel="preload" as="image" href="/{{ .WebPath }}" />
    {{ end }}
    <script>
      document.addEventListener('keydown', event => {
        switch (event.key) {
          {{with .Prev}}
            case "ArrowLeft":
              window.location.href = "{{ .PageLink }}";
              break;
          {{end}}
          {{with .Next}}
            case "ArrowRight":
              window.location.href = "{{ .PageLink }}";
              break;
          {{end}}
        }
      });
    </script>
    <title>twos.dev Photo Viewer</title>
    <style>
      a,
      a:visited {
        color: grey !important;
      }
      body {
        background: black !important;
        color: grey !important;
        line-height: 1em;
        margin: 0;
      }
      html {
        margin: 0;
      }
      span {
        background: black !important;
      }
    </style>
  </head>

  <body>
    <span style="position:absolute">
      {{ with .Prev }}
        <a href="{{ .PageLink }}" class="contrast">&larr; prev</a>
      {{ end }}
      {{ if and .Prev .Next }}/{{ end }}
      {{ with .Next }}
        <a href="{{ .PageLink }}" class="contrast">next &rarr;</a>
      {{ end }}
    </span>
    <a
      href="{{ with .Next }}
        {{ .PageLink }}
      {{ else }}
        /
      {{ end }}"
      class="img"
      style="text-align: center; margin-bottom: 0; position: absolute; top: 0; left: 0; z-index: -1;"
      ><img
        alt="{{ .Alt }}"
        src="/{{ .WebPath }}"
        style="max-width: 100vh; max-height: 100vh; display:block;"
    /></a>
    <div style="position:absolute; left:0; bottom:0;">
      <span style="font-style:italic;"> {{ .Camera }}</span><br />
      <span style="font-style:italic;">
        {{ .FocalLength }}mm &bull; Æ’{{ .Aperture }} &bull; {{ .ShutterSpeed }}s
        &bull; ISO
        {{ .ISO }}
      </span>
      <br />
      <span style="font-style: italic; bottom:0;">
        &copy; {{ .TakenAt.Year }} Benjamin Carlsson
      </span>
    </div>
  </body>
</html>
