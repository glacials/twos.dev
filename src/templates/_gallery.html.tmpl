<h2>{{ . }}&rarr;</h2>
{{ range (gallery .) }}
  <label class="gallery-item">
    <input type="checkbox" />
    {{ $img := . }}
    {{ $downscaled := index .Thumbnails 0 }}
    {{ $fullscreen := . }}
    {{ range .Thumbnails }}
      {{ if le .Height 256 }}
        {{ $downscaled = . }}
      {{ end }}
    {{ end }}
    <img
      alt="{{ $img.Alt }}"
      class="thumbnail"
      src="{{ $downscaled.WebPath }}"
      title=""
    />
    <img
      alt="{{ $img.Alt }}"
      class="fullsize"
      loading="lazy"
      src="{{ $fullscreen.WebPath }}"
      title=""
    />
    <p class="caption exif">
      {{ with .Camera }}
        <a href="{{ .Link }}" target="_blank">{{ .Make }} {{ .Model }}</a><br />
      {{ end }}
      {{ with .Lens }}
        <a href="{{ .Link }}">{{ .Make }} {{ .Model }}</a>
        @
      {{ end }}
      {{ .FocalLength }}mm &bull;
      Æ’{{ .Aperture }}
      &bull; {{ .ShutterSpeed }}s &bull; ISO
      {{ .ISO }}
      <br />
      &copy; {{ .TakenAt.Year }} Ben Carlsson
    </p>
  </label>
{{ end }}
