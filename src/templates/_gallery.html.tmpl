{{ define "gallery" }}
  <div class="photo-grid">
    <h2>{{ . }}</h2>
    {{ range (index gallery .) }}
      <a href="{{ .PageLink }}">
        <img
          class="silly"
          src="{{ .WebPath }}"
          srcset="{{ range .Thumbnails }}{{ .WebPath }} {{ .Width }}w,{{ end }}"
          sizes="{{ range .Thumbnails }}
            (max-width: {{ .Width }}px) {{ .Width }}px,
          {{ end }}"
        />
      </a>
    {{ end }}
  </div>
{{ end }}
